def emailManager = container.lookup(org.sonatype.nexus.email.EmailManager.class.name);
def config = emailManager.getConfiguration();
config.enabled = <%= resource[:enabled] %>;
config.host = '<%= resource[:hostname] %>';
config.port = <%= resource[:port] %>;
config.username = '<%= resource[:username] %>';
config.password = '<%= resource[:password] %>';
config.fromAddress = '<%= resource[:sender_email] %>';
config.subjectPrefix = '<%= resource[:subject_prefix] %>';
emailManager.setConfiguration(config);
